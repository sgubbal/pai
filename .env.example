# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Stack Configuration
STACK_NAME=pai-agent
ENVIRONMENT=dev

# Encryption
KMS_KEY_ALIAS=pai-encryption-key

# AI Models (Bedrock)
# Ensure you've enabled model access in AWS Bedrock Console
AI_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# Memory Configuration
SHORT_TERM_RETENTION_DAYS=7
LONG_TERM_RETENTION_DAYS=365
VECTOR_DIMENSION=1024

# OpenSearch Configuration
OPENSEARCH_INDEX_NAME=pai-memories

# DynamoDB Tables
CONVERSATIONS_TABLE=pai-conversations
MEMORIES_TABLE=pai-memories

# S3 Buckets
MEMORY_BUCKET=pai-long-term-memory

# API Configuration
API_THROTTLE_RATE=10
API_THROTTLE_BURST=20
